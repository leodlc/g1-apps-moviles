<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.espe.poliza">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Poliza"
        tools:targetApi="31">

        <!-- Main Activity (Entrada de la app) -->
        <activity
            android:name="com.espe.view.Main"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- EditPolizaActivity (Pantalla para editar una pÃ³liza) -->
        <activity
            android:name="com.espe.view.EditPolizaActivity"
            android:exported="true" />

    </application>
</manifest>
